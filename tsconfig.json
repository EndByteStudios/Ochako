{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@commands/*": ["commands/*"],
            "@handlers/*": ["handlers/*"],
            "@lib/*": ["lib/*"],
            "@scripts/*": ["scripts/*"],
            "@/*": ["./*"]
        }
    }
}
